{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["dom", "dom.iterable", "esnext"]
    },
    "include": ["src/**/*"], 
    "exclude": ["node_modules"]
}