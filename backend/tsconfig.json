{
	"compilerOptions": {
        // 1. Tvinga TypeScript att generera ES Module-syntax
    "module": "NodeNext", 
    
    // 2. Använd det moderna modulresolutionssystemet
    "moduleResolution": "NodeNext", 
    
    // 3. (Valfritt men rekommenderat) Se till att målversionen är modern
    "target": "ES2022",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		],
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	}
}